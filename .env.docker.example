# Configuration pour Docker Compose
# Copiez ce fichier vers .env pour l'utiliser avec docker-compose

# Database Configuration
POSTGRES_USER=produits_user
POSTGRES_PASSWORD=produits_password
POSTGRES_DB=produits_db

# RabbitMQ Configuration (déjà configuré dans docker-compose.yml)
# RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_EXCHANGE=payetonkawa
RABBITMQ_QUEUE_PRODUCTS=products_events

# Application Configuration
APP_NAME=Service Produits - PayeTonKawa
APP_VERSION=1.0.0
DEBUG=True
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
