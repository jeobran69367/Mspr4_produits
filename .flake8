[flake8]
# Maximum line length
max-line-length = 120

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    migrations,
    .pytest_cache,
    build,
    dist,
    *.egg-info

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Show source code
show-source = True

# Count errors
count = True

# Show statistics
statistics = True
