{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheck": {
      "path": "/health",
      "port": 8000,
      "initialDelay": 30,
      "periodSeconds": 30,
      "timeoutSeconds": 5
    }
  }
}